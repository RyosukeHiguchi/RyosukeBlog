<div class="container">
  <div class="row">
  <% @articles.each do |article| %>
  <%= link_to article do %>
  <div class="col-md-3 margin-top-5per article-block">
      <% if article.image_id.present? %>
        <%= image_tag attachment_url(article, :image), class: 'img-responsive padding-top-15 article-list-image' %>
      <% else %>
        <p class="text-center padding-top-80", style='height: 140px; width: 100%'>画像がセットされていません</p>
      <% end %>
      <div class="padding-bottom-15">
      <p class="title"><%= article.title %></p>
      <span><%= article.created_at.strftime("%Y年%m月%d日") %>
      </span>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
  <div class="row">
      <%= link_to '新規作成', new_article_path, class: 'margin-top-5per btn btn-success' %>
  </div>
</div>
<%= will_paginate %>